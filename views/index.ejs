                    <% horasInicio.forEach(function(hour) { %>
                        <option value="<%= hour %>"><%= hour %></option>
                    <% }); %>
                </select>
                <label for="horasFin2_<%= i+1 %>">Hora de Fin 2:</label>
                <select id="horasFin2_<%= i+1 %>" name="horasFin2_<%= i+1 %>">
                    <% horasFin.forEach(function(hour) { %>
