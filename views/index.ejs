                <label for="dia1_<%= i+1 %>">Dia :</label>
                <select id="dia1_<%= i+1 %>" name="dia1_<%= i+1 %>">
                    <% dias.forEach(function(dia) { %>
                        <option value="<%= dia %>"><%= dia %></option>
                    <% }); %>    
                </select>

                <label for="horasInicio1_<%= i+1 %>">Hora de Inicio:</label>
                <select id="horasInicio1_<%= i+1 %>" name="horasInicio1_<%= i+1 %>">
                    <% horasInicio.forEach(function(hour) { %>
                        <option value="<%= hour %>"><%= hour %></option>
                    <% }); %>    
                </select>
                <label for="horasFin1_<%= i+1 %>" >Hora de Fin:</label>
